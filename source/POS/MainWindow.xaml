<Controls:Window x:Class="POS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:toolkit="http://schemas.microsoft.com/wpf/2008/toolkit"
        xmlns:Controls="clr-namespace:Elysium.Controls;assembly=Elysium"
        xmlns:params="http://schemas.codeplex.com/elysium/params" 
        WindowStartupLocation="CenterScreen" 
        params:Design.Theme="Light" 
        params:Manager.Theme="Light"
        Title="Pizzaness Order" WindowState="Maximized">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Left" >

            <Button HorizontalAlignment="Center" VerticalAlignment="Center" Margin="35,10,0,0" Click="OrderNow_Click">
                <TextBlock HorizontalAlignment="Center" ToolTipService.ToolTip="Order Now" TextAlignment="Center" Height="174">
                
                    <Image Source="/ordericon.png" Height="150" /><LineBreak />
                    Order Now
                </TextBlock>
            </Button>
            
        </StackPanel>
        </StackPanel>
    </Grid>
</Controls:Window>
